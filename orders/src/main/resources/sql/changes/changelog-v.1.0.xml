<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="20221027-1" author="es-vasilev" failOnError="true">
    <preConditions onError="MARK_RAN">
      <not>
        <tableExists tableName="products"/>
      </not>
    </preConditions>
    <createTable tableName="products">
      <column name="id" type="BIGSERIAL">
        <constraints primaryKey="true" primaryKeyName="pk_products"/>
      </column>
      <column name="name" type="TEXT"/>
      <column name="cost" type="NUMERIC"/>
    </createTable>
    <addUniqueConstraint tableName="products" columnNames="name"/>
  </changeSet>

  <changeSet id="20221027-2" author="es-vasilev" failOnError="true">
    <sql>
      insert into products (name, cost) values ('Burger', 170.0);
      insert into products (name, cost) values ('Pizza', 700.0);
      insert into products (name, cost) values ('Salad', 350.0);
      insert into products (name, cost) values ('Cola', 120.0);
      insert into products (name, cost) values ('Coffee', 350.0);
    </sql>
  </changeSet>

</databaseChangeLog>